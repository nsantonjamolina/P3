<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_settings">

    <TableRow>
        <TextView android:text="Name" android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="normal|bold" />
        <EditText android:hint="Enter your name" android:layout_weight="2"
            android:textAlignment="center" />

    </TableRow>

    <TableRow android:layout_height="wrap_content">

        <TextView android:text="How many times can you ask for help" android:layout_weight="2"
            android:textStyle="normal|bold"
            android:textSize="18sp" />
        <!--Por ahora lo dejamos como TV, mÃ¡s adelante si requiere pondremos ET-->
        <TextView android:text="3" android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center" />
    </TableRow>

    <TableRow>
        <Button android:text="Add friend" />

        <EditText android:hint="Enter your friend's name"/>
    </TableRow>
</TableLayout>